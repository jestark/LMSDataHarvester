<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                     http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
	<description>Entity mappings for the course database</description>
	<package>ca.uoguelph.socs.icc.edm.domain.core</package>

	<access>PROPERTY</access>

	<!--*********************************************************************-->
	<!--  Mapped super classes used by activities                            -->
	<!--*********************************************************************-->

	<mapped-superclass class="AbstractActivity" metadata-complete="true">
		<description></description>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
			</id>
			<transient name="log"/>
		</attributes>
	</mapped-superclass>

	<!--*********************************************************************-->
	<!--  Core data mapping: Users                                           -->
	<!--*********************************************************************-->

	<entity name="User" class="UserData" metadata-complete="true">
		<description>Data identifying the user</description>
		<table schema="userdb" name="user"/>
		<named-query name="UserData:maxid">
			<query>SELECT MAX(u.id) FROM User u</query>
		</named-query>
		<named-query name="UserData:allid">
			<query>SELECT u.id FROM User u</query>
		</named-query>
		<named-query name="UserData:all">
			<query>SELECT u FROM User u</query>
		</named-query>
		<named-query name="UserData:idnumber">
			<query>SELECT u FROM User u WHERE u.idNumber = :idnumber</query>
		</named-query>
		<named-query name="UserData:username">
			<query>SELECT u FROM User u WHERE u.username = :username</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="user_id_seq"/>
				<sequence-generator name="user_id_seq" sequence-name="user_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="idNumber">
				<column name="id_number" />
			</basic>
			<basic name="username">
				<column name="username" nullable="false" unique="true"/>
			</basic>
			<basic name="firstname">
				<column name="first_name" nullable="false"/>
			</basic>
			<basic name="lastname">
				<column name="last_name" nullable="false"/>
			</basic>
			<one-to-many name="enrolments" target-entity="UserEnrolmentData" mapped-by="user"/>
			<!--			<transient name="enrolment"/>-->
			<transient name="name"/>
		</attributes>
	</entity>

	<!--*********************************************************************-->
	<!-- Core data mapping: Courses                                          -->
	<!--*********************************************************************-->

	<entity name="Course" class="CourseData" metadata-complete="true">
		<description>Date identifying a particular offering of a course</description>
		<table name="course"/>
		<named-query name="CourseData:maxid">
			<query>SELECT MAX(c.id) FROM Course c</query>
		</named-query>
		<named-query name="CourseData:allid">
			<query>SELECT c.id FROM Course c</query>
		</named-query>
		<named-query name="CourseData:all">
			<query>SELECT c FROM Course c</query>
		</named-query>
		<named-query name="CourseData:allsemester">
			<query>SELECT c FROM Course c WHERE c.year = :year AND c.semester = :semester</query>
		</named-query>
		<named-query name="CourseData:alloffering">
			<query>SELECT c FROM Course c WHERE c.year = :year AND c.semester = :semester AND c.name LIKE :name</query>
		</named-query>
		<named-query name="CourseData:offering">
			<query>SELECT c FROM Course c WHERE c.year = :year AND c.semester = :semester AND c.name = :name</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="course_id_seq"/>
				<sequence-generator name="course_id_seq" sequence-name="course_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false"/>
			</basic>
			<basic name="semester">
				<column name="senester" nullable="false"/>
				<enumerated>STRING</enumerated>
			</basic>
			<basic name="year">
				<column name="year" nullable="false"/>
			</basic>
			<one-to-many name="activities" target-entity="ActivityInstance" orphan-removal="true">
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-many>
			<one-to-many name="enrolments" target-entity="EnrolmentData" mapped-by="course" orphan-removal="true">
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-many>
		</attributes>
	</entity>

	<!--*********************************************************************-->
	<!-- Core data mapping: Enrolments                                       -->
	<!--*********************************************************************-->

	<entity name="Role" class="RoleData" metadata-complete="true">
		<description>The Role of a participant in a course</description>
		<table name="enrolment_role"/>
		<named-query name="RoleData:maxid">
			<query>SELECT MAX(r.id) FROM Role r</query>
		</named-query>
		<named-query name="RoleData:allid">
			<query>SELECT r.id FROM Role r</query>
		</named-query>
		<named-query name="RoleData:all">
			<query>SELECT r FROM Role r</query>
		</named-query>
		<named-query name="RoleData:name">
			<query>SELECT r FROM Role r WHERE r.name = :name</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="enrolment_role_id_seq"/>
				<sequence-generator name="enrolment_role_id_seq" sequence-name="enrolment_role_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false" unique="true"/>
			</basic>
		</attributes>
	</entity>

	<entity name="Enrolment" class="EnrolmentData" metadata-complete="true">
		<description>Record for a user enrolled in a course</description>
		<table name="enrolment"/>
		<secondary-table name="enrolment_final_grade">
			<primary-key-join-column name="enrolment_id" referenced-column-name="id"/>
		</secondary-table>
		<named-query name="EnrolmentData:maxid">
			<query>SELECT MAX(e.id) FROM Enrolment e</query>
		</named-query>
		<named-query name="EnrolmentData:allid">
			<query>SELECT e.id FROM Enrolment e</query>
		</named-query>
		<named-query name="EnrolmentData:all">
			<query>SELECT e FROM Enrolment e</query>
		</named-query>
		<named-query name="EnrolmentData:role">
			<query>SELECT e FROM Enrolment e WHERE e.role = :role</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
			</id>
			<basic name="usable">
				<column name="usable" nullable="false"/>
			</basic>
			<basic name="finalGrade">
				<column name="grade"/>
			</basic>
			<many-to-one name="role" target-entity="RoleData" optional="false">
				<join-column name="role_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-one name="course" target-entity="CourseData" optional="false">
				<join-column name="course_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<one-to-many name="grades" target-entity="GradedActivity" mapped-by="enrolment" orphan-removal="true">
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-many>
			<one-to-many name="log" target-entity="LogData" mapped-by="enrolment" orphan-removal="true"/>
			<transient name="name"/>
		</attributes>
	</entity>

	<entity name="UserEnrolment" class="UserEnrolmentData" metadata-complete="true">
		<table name="enrolment"/>
		<named-query name="UserEnrolmentData:maxid">
			<query>SELECT MAX(e.id) FROM UserEnrolment e</query>
		</named-query>
		<named-query name="UserEnrolmentData:allid">
			<query>SELECT e.id FROM UserEnrolment e</query>
		</named-query>
		<named-query name="UserEnrolmentData:all">
			<query>SELECT e FROM UserEnrolment e</query>
		</named-query>
		<named-query name="UserEnrolmentData:role">
			<query>SELECT e FROM UserEnrolment e WHERE e.role = :role</query>
		</named-query>
		<attributes>
			<many-to-one name="user" target-entity="UserData" optional="false">
				<join-table schema="userdb" name="user_enrolments">
					<join-column name="enrolment_id" nullable="false" referenced-column-name="id"/>
					<inverse-join-column name="user_id" nullable="false" referenced-column-name="id"/>
				</join-table>
			</many-to-one>
			<transient name="name"/>
		</attributes>
	</entity>

	<entity name="Grade" class="GradedActivity" metadata-complete="true">
		<description>Grades assigned to individual activities for a student</description>
		<table name="enrolment_activity_grade"/>
		<attributes>
			<id name="enrolment"/>
			<id name="activity"/>
			<basic name="grade">
				<column name="grade" nullable="false"/>
			</basic>
			<many-to-one name="enrolment" target-entity="EnrolmentData" optional="false">
				<join-column name="enrolment_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-one name="activity" target-entity="ActivityInstance" optional="false">
				<join-column name="activity_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<transient name="name"/>
		</attributes>
	</entity>

	<!--*********************************************************************-->
	<!--  Core data mapping: Activities                                      -->
	<!--*********************************************************************-->

	<entity name="ActivitySource" class="ActivitySourceData" metadata-complete="true">
		<description>The the source of the activity data</description>
		<table name="activity_source"/>
		<named-query name="ActivitySourceData:maxid">
			<query>SELECT MAX(s.id) FROM ActivitySource s</query>
		</named-query>
		<named-query name="ActivitySourceData:allid">
			<query>SELECT s.id FROM ActivitySource s</query>
		</named-query>
		<named-query name="ActivitySourceData:all">
			<query>SELECT s FROM ActivitySource s</query>
		</named-query>
		<named-query name="ActivitySourceData:name">
			<query>SELECT s FROM ActivitySource s WHERE s.name = :name</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="activity_source_id_seq"/>
				<sequence-generator name="activity_source_id_seq" sequence-name="activity_source_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false" unique="true"/>
			</basic>
			<one-to-many name="types" target-entity="ActivityTypeData" mapped-by="source" orphan-removal="true"/>
		</attributes>
	</entity>

	<entity name="ActivityType" class="ActivityTypeData" metadata-complete="true">
		<description>The type of the activity (or the module)</description>
		<table name="activity"/>
		<named-query name="ActivityTypeData:maxid">
			<query>SELECT MAX(t.id) FROM ActivityType t</query>
		</named-query>
		<named-query name="ActivityTypeData:allid">
			<query>SELECT t.id FROM ActivityType t</query>
		</named-query>
		<named-query name="ActivityTypeData:all">
			<query>SELECT t FROM ActivityType t</query>
		</named-query>
		<named-query name="ActivityTypeData:name">
			<query>SELECT t FROM ActivityType t WHERE t.name = :name AND t.source = :source</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="activity_id_seq"/>
				<sequence-generator name="activity_id_seq" sequence-name="activity_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="name">
				<column name="name" updatable="false"/>
			</basic>
			<many-to-one name="source" target-entity="ActivitySourceData" optional="false">
				<join-column name="source_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-many name="actions" target-entity="ActionData">
				<join-table name="activity_action_map" >
					<join-column name="activity_id" nullable="false" referenced-column-name="id"/>
					<inverse-join-column name="action_id" nullable="false" referenced-column-name="id"/>
				</join-table>
			</many-to-many>
		</attributes>
	</entity>

	<entity name="Action" class="ActionData" metadata-complete="true">
		<description>The name of the action performed</description>
		<table name="activity_action"/>
		<named-query name="ActionData:maxid">
			<query>SELECT MAX(a.id) FROM Action a</query>
		</named-query>
		<named-query name="ActionData:allid">
			<query>SELECT a.id FROM Action a</query>
		</named-query>
		<named-query name="ActionData:all">
			<query>SELECT a FROM Action a</query>
		</named-query>
		<named-query name="ActionData:name">
			<query>SELECT a FROM Action a WHERE a.name = :name</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="activity_action_id_seq"/>
				<sequence-generator name="activity_action_id_seq" sequence-name="activity_action_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false"/>
			</basic>
			<many-to-many name="types" target-entity="ActivityTypeData" mapped-by="actions"/>
		</attributes>
	</entity>

	<entity name="Activity" class="ActivityInstance" metadata-complete="true">
		<description>The activities which are associated with a given course</description>
		<table name="activity_instance"/>
		<inheritance strategy="JOINED"/>
		<named-query name="ActivityInstance:maxid">
			<query>SELECT MAX(a.id) FROM Activity a</query>
		</named-query>
		<named-query name="ActivityInstance:allid">
			<query>SELECT a.id FROM Activity a</query>
		</named-query>
		<named-query name="ActivityInstance:all">
			<query>SELECT a FROM Activity a</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="activity_instance_id_seq"/>
				<sequence-generator name="activity_instance_id_seq" sequence-name="activity_instance_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<many-to-one name="type" target-entity="ActivityTypeData" optional="false">
				<join-column name="activity_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-one name="course" target-entity="CourseData" optional="false">
				<join-column name="course_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<one-to-many name="grades" target-entity="GradedActivity" mapped-by="activity"/>
			<one-to-many name="log" target-entity="LogData" mapped-by="activity">
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-many>
			<one-to-one name="activity" target-entity="GenericNamedActivity" optional="true" mapped-by="instance">
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-one>
		</attributes>
	</entity>

	<entity name="GenericActivity" class="GenericActivity" metadata-complete="true">
		<description>Mapping For the Generic Activity and the relationship the the instance</description>
		<table name="activity_instance_stealth"/>
		<primary-key-join-column name="instance_id" referenced-column-name="id"/>
		<attributes>
			<transient name="name"/>
		</attributes>
	</entity>

	<entity name="GenericNamedActivity" class="GenericNamedActivity" metadata-complete="true">
		<description>Mapping For the Generic Activity and the relationship the the instance</description>
		<attributes>
			<id name="id">
				<column name="instance_id" nullable="false" unique="true"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false"/>
			</basic>
		</attributes>
	</entity>

	<!-- GenericGroupedActivity -->

	<entity name="GenericGroupedActivityMember" class="GenericGroupedActivityMember" metadata-complete="true">
		<description></description>
		<inheritance strategy="TABLE_PER_CLASS"/>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
			</id>
			<basic name="name">
				<column name="name" nullable="false"/>
			</basic>
			<transient name="log"/>
			<transient name="course"/>
			<transient name="type"/>
			<transient name="grades"/>
			<transient name="parent"/>
		</attributes>
	</entity>

	<!-- GenericGroupedActivityGroup-->

	<!--*********************************************************************-->
	<!-- Core data mapping: Log entries                                      -->
	<!--*********************************************************************-->

	<entity name="LogEntry" class="LogData" metadata-complete="true">
		<description>The course activity log</description>
		<table name="log"/>
		<secondary-table name="log_ip">
			<primary-key-join-column name="log_id" referenced-column-name="id"/>
		</secondary-table>
		<named-query name="LogData:maxid">
			<query>SELECT MAX(e.id) FROM LogEntry e</query>
		</named-query>
		<named-query name="LogData:allid">
			<query>SELECT e.id FROM LogEntry e</query>
		</named-query>
		<named-query name="LogData:all">
			<query>SELECT e FROM LogEntry e</query>
		</named-query>
		<named-query name="LogData:course">
			<query>SELECT e FROM LogEntry e JOIN e.activity a WHERE a.course = :course ORDER BY e.id</query>
		</named-query>
		<attributes>
			<id name="id">
				<column name="id" nullable="false" unique="true"/>
				<generated-value strategy="SEQUENCE" generator="log_id_seq"/>
				<sequence-generator name="log_id_seq" sequence-name="log_id_seq" initial-value="1" allocation-size="1"/>
			</id>
			<basic name="time" optional="false">
				<column name="time" nullable="false"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="IPAddress" optional="false">
				<column name="ipaddress" nullable="false"/>
			</basic>
			<many-to-one name="activity" target-entity="ActivityInstance" optional="false">
				<join-column name="instance_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-one name="action" target-entity="ActionData" optional="false">
				<join-column name="action_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<many-to-one name="enrolment" target-entity="EnrolmentData" optional="false">
				<join-column name="enrolment_id" nullable="false" referenced-column-name="id"/>
			</many-to-one>
			<one-to-one name="reference" target-entity="LogReference" mapped-by="entry"/>
			<transient name="course"/>
		</attributes>
	</entity>

	<entity name="LogReference" class="LogReference" metadata-complete="true">
		<description>References to logged sub-activities</description>
		<inheritance strategy="TABLE_PER_CLASS"/>
		<attributes>
			<id name="entry"/>
			<one-to-one name="entry" target-entity="LogData" optional="false">
				<join-column name="log_id" nullable="false" referenced-column-name="id"/>
			</one-to-one>
			<transient name="action"/>
			<transient name="activity"/>
			<transient name="course"/>
			<transient name="enrolment"/>
			<transient name="IPAddress"/>
			<transient name="time"/>
		</attributes>
	</entity>
</entity-mappings>
