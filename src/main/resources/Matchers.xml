<subActivityConverter xmlns="http://icc.socs.uoguelph.ca/edm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://icc.socs.uoguelph.ca/edm Matchers.xsd">
	<matchers package="ca.uoguelph.socs.icc.edm.domain.element.activity.moodle">
		<matcher activity="Book" subactivity="BookChapter">
			<action>add chapter</action>
			<action>print chapter</action>
			<action>update chapter</action>
			<action>view chapter</action>
		</matcher>
		<matcher activity="Forum" subactivity="ForumDiscussion">
			<action>add discussion</action>
			<action>move discussion</action>
			<action>update discussion</action>
			<action>view discussion</action>
		</matcher>
		<matcher activity="Forum" subactivity="ForumPost">
			<action>add post</action>
			<action>update post</action>
			<action>delete post</action>
		</matcher>
		<matcher activity="Lesson" subactivity="LessonPage">
			<action>view</action>
		</matcher>
		<matcher activity="Workshop" subactivity="WorkshopSubmission">
			<action>add assessment</action>
			<action>add example</action>
			<action>add example assessment</action>
			<action>add reference assessment</action>
			<action>add submission</action>
			<action>update assessment</action>
			<action>update example</action>
			<action>update example assessment</action>
			<action>update reference assessment</action>
			<action>update submission</action>
			<action>view example</action>
			<action>view submission</action>
		</matcher>
		<matcher activity="Wiki" subactivity="WikiPage">
			<url>pageid</url>
		</matcher>
	</matchers>
</subActivityConverter>
